<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.niraj.getdatademo.MainActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="Registration"
        android:textSize="30dp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shap_rect_border"
        android:hint="First Name"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLines="1"
        android:padding="5dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shap_rect_border"
        android:hint="Last Name"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLines="1"
        android:padding="5dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shap_rect_border"
        android:drawableRight="@drawable/ic_mail_outline_black_24dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLines="1"
        android:padding="5dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_eno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shap_rect_border"
        android:hint="Enrol No."
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:padding="5dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_height"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shap_rect_border"
        android:hint="Height(in cm)"
        android:inputType="number"
        android:lines="1"
        android:maxLength="3"
        android:maxLines="1"
        android:padding="5dp" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.2"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Gender:"
            android:textSize="20dp" />

        <RadioGroup

            android:id="@+id/rg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checkedButton="@+id/rb_male"
            android:orientation="horizontal"
            android:padding="5dp">


            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_male"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Male"
                app:buttonTint="#000000" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_female"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="01"
                android:text="Female"
                app:buttonTint="#000000" />
        </RadioGroup>
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:buttonTint="#000000"
        android:padding="5dp"
        android:text="I Accept all Terms amd Conditions." />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="Submit" />
</android.support.v7.widget.LinearLayoutCompat>
