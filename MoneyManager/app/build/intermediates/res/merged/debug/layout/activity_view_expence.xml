<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_view_expence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moneymanager.moneymanager.ViewExpence">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_view_record"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="#ecf0f1"></android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_view_record_employee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_record"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/toolbar_view_record">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
