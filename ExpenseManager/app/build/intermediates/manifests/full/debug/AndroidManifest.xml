<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.textanddrive.expensemanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity android:name="com.textanddrive.expensemanager.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.textanddrive.expensemanager.MainActivity"
            android:label="Expense Manager" />
        <activity
            android:name="com.textanddrive.expensemanager.AddExpenseActivity"
            android:label="Add an Expense" />
        <activity
            android:name="com.textanddrive.expensemanager.ViewExpenseActivity"
            android:label="Expenses" />
    </application>

</manifest>