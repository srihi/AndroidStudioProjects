<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.textanddrive.broadcastdemo.MainActivity">

    <fragment
        android:id="@+id/first_fragment_container"
        android:name="com.textanddrive.broadcastdemo.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        tools:layout="@layout/fragment_first" />

    <fragment
        android:id="@+id/second_fragment_container"
        android:name="com.textanddrive.broadcastdemo.SecondFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        tools:layout="@layout/fragment_second" />

    <fragment
        android:id="@+id/Third_fragment_container"
        android:name="com.textanddrive.broadcastdemo.ThirdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        tools:layout="@layout/fragment_third" />

</android.support.v7.widget.LinearLayoutCompat>
