<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_relative_layout_taxibooking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.niraj.demoapp.LayoutDemos.RelativeLayoutTaxibookingActivity">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar1" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_map"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/toolbar1"
        android:background="@drawable/map_half" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_map"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_room_black_24dp"
        android:text=" Waghodia Road"
        android:textSize="36dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_place"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_event_black_24dp"
        android:text=" 10 Jan, 2017"
        android:textSize="28dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_place"
        android:layout_margin="16dp"
        android:layout_toRightOf="@id/tv_date"
        android:drawableLeft="@drawable/ic_access_time_black_24dp"
        android:text=" 21:07"
        android:textSize="28dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_person"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shap_rect_border"
        android:src="@drawable/ic_person_black_24dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_people"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/img_person"
        android:background="@drawable/shap_rect_border"
        android:src="@drawable/ic_people_black_24dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_money"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/img_people"
        android:background="@drawable/shap_rect_border"
        android:src="@drawable/ic_attach_money_black_24dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_wallet"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/img_money"
        android:background="@drawable/shap_rect_border"
        android:src="@drawable/ic_account_balance_wallet_black_24dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_setting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/img_wallet"
        android:background="@drawable/shap_rect_border"
        android:src="@drawable/ic_settings_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_person"
        android:layout_marginTop="16dp"
        android:background="#FCE806"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_local_taxi_black_24dp"
            app:civ_border_color="#000000"
            app:civ_border_width="4dp" />


    </RelativeLayout>
</RelativeLayout>
