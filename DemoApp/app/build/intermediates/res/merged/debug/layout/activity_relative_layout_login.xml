<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_relative_layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_demo1_bg_gradient"
    tools:context="com.example.niraj.demoapp.LayoutDemos.RelativeLayoutLoginActivity">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar1"
        android:gravity="center"
        android:padding="5dp"
        android:text="Happy Wallet"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Get Started in Easy 5 Step!"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Login or Create Your New Account"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_dotted_border"
        android:drawableLeft="@drawable/ic_perm_identity_white_24dp"
        android:hint="Username"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="15dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_dotted_border"
        android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="15dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_reg"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_password"
        android:layout_toLeftOf="@+id/tv4"
        android:background="#5B5C5C"
        android:text="Register"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_password"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="or"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_password"
        android:layout_toRightOf="@id/tv4"
        android:background="#FDBC3F"
        android:text="Login"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_reg"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Forgot Your Password?"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tv5"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/tv6"
        android:background="@android:color/darker_gray" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Or Sign in With"
        android:textColor="@android:color/white" />

    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tv5"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv6"

        android:background="@android:color/darker_gray"
        android:textAlignment="center" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_fb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv6"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/btn_twit"
        android:background="@mipmap/fb" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_twit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv6"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@mipmap/twitter" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_google"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv6"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/btn_twit"
        android:background="@mipmap/google" />


</RelativeLayout>
