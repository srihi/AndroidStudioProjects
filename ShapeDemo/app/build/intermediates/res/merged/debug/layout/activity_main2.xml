<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="framedemo.com.shapedemo.MainActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/info_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_student"
        android:textSize="24dp"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:background="@drawable/signup_rect"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_fname"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:hint="@string/fname"
            android:background="@drawable/rect_edittext"
            android:inputType="text"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_lname"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:hint="@string/lname"
            android:background="@drawable/rect_edittext"
            android:inputType="text"
            android:maxLines="1"
            android:shadowColor="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_email"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:background="@drawable/rect_edittext"
            android:inputType="text"
            android:maxLines="1"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_contact"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:hint="@string/contact"
            android:background="@drawable/rect_edittext"
            android:inputType="number"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:lines="2"
            android:background="@drawable/rect_edittext"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:textSize="18dp"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:entries="@array/country_names"
            android:background="@drawable/dropdown_rect"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/city"
            android:textSize="18dp"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:entries="@array/city_names"
            android:background="@drawable/dropdown_rect"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intrest_in"
            android:textSize="18dp"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_study1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/study"
            android:textSize="18dp"
            android:textColor="#34495e"
            android:buttonTint="#c0392b"
            />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_singing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:text="@string/singing"
            android:textSize="18dp"
            android:textColor="#34495e"
            android:buttonTint="#c0392b"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_movies1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="@string/movies"
            android:textSize="18dp"
            android:textColor="#34495e"
            android:buttonTint="#c0392b"
            />
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_games1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/games"
            android:textSize="18dp"
            android:textColor="#34495e"
            android:buttonTint="#c0392b"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/gender"
            android:textSize="18dp"/>

        <RadioGroup
            android:id="@+id/radio_group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:id="@+id/gen_male1"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginLeft="38dp"
                android:text="@string/gen_male"
                android:textSize="18dp"
                android:textColor="#FF33495E"
                android:buttonTint="#c0392b"/>

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:id="@+id/gen_female1"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginLeft="28dp"
                android:text="@string/gen_female"
                android:textSize="18dp"
                android:textColor="#FF33495E"
                android:buttonTint="#c0392b"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_password"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:background="@drawable/rect_edittext"
            android:inputType="textPassword"
            android:maxLines="1"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_re_password"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:hint="@string/re_password"
            android:background="@drawable/rect_edittext"
            android:inputType="textPassword"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_rect"

            />

    </LinearLayout>

</LinearLayout>


